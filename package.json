{
  "name": "nydus",
  "version": "4.0.2",
  "description": "WebSocket server using the nydus protocol, a simple RPC/PubSub protocol.",
  "main": "dist/cjs/index.js",
  "module": "dist/modules/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">= 22.12.0"
  },
  "scripts": {
    "autotest": "ts-mocha -p tsconfig-cjs.json -w --watch-extensions ts -R spec test/**.ts",
    "build": "tsc && tsc -p tsconfig-cjs.json",
    "clean": "rimraf dist",
    "lint": "eslint --ext .js,.ts ./",
    "prepublishOnly": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run clean && pnpm run build",
    "test": "ts-mocha -p tsconfig-cjs.json -R spec test/**.ts",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/tec27/nydus"
  },
  "keywords": [
    "nydus",
    "websockets",
    "websocket",
    "rpc",
    "pubsub"
  ],
  "author": "Travis Collins <travis@tec27.com> (http://tec27.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tec27/nydus/issues"
  },
  "homepage": "https://github.com/tec27/nydus",
  "files": [
    "dist/**"
  ],
  "dependencies": {
    "backo2": "^1.0.2",
    "engine.io": "^6.2.0",
    "immutable": "^4.3.7",
    "nanoid": "^5.1.5",
    "nydus-protocol": "^3.0.0",
    "ruta3": "^2.0.0",
    "typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@types/backo2": "^1.0.1",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "engine.io-client": "^6.2.2",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "mocha": "^11.6.0",
    "nydus-client": "^4.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
