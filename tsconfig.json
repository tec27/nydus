{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2020",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "outDir": "./dist/modules",

    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },

  "include": ["./"],
  "exclude": ["node_modules", "dist", "test"]
}
