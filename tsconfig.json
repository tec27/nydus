{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "outDir": "./dist",

    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  },

  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
